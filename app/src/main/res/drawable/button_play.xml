<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="@color/button_background_pressed"
                android:endColor="@color/blue_primary_dark"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="@color/blue_accent"
                android:endColor="@color/blue_primary"
                android:type="linear" />
        </shape>
    </item>
</selector>